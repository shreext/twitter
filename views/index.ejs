<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tweets</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-content">
            <h1>Shree X</h1>
            <a href="/post" class="post-tweet-btn">Post Tweet</a>
        </div>
    </nav>
    
    <div class="main-content">
        <% if (tweets && tweets.length > 0) { %>
            <% tweets.forEach(tweet => { %>
                <div class="tweet">
                    <div class="tweet-content">
                        <h4><%= tweet.userName %></h4>
                        <p><%= tweet.userTweet %></p>
                    </div>
                    <form action="/deleteTweet" method="POST">
                        <input type="hidden" name="tweetId" value="<%= tweet._id %>">
                        <button type="submit"><i class="fa-solid fa-trash fa-2xl"></i></button>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
            <p>No tweets found in the database.</p>
        <% } %>
    </div>
    
    <footer class="footer">
        <p>Developed by Anant Shree using EJS, NodeJS, MongoDB</p>
    </footer>
</body>
</html>