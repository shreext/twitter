<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tweets</title>
    <link rel="stylesheet" href="/istyle.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-content">
            <div class="nav-left">
                <h1>Shree X</h1>
            </div>
            <div class="nav-buttons">
                <a href="/tweets/profile" class="post-tweet-btn">Profile</a>
            </div>
        </div>
    </nav>
    
    <div class="main-content">
        <% if (tweets && tweets.length > 0) { %>
            <% tweets.forEach(tweet => { %>
                <div class="tweet">
                    <div class="tweet-content">
                        <h4><%= tweet.author.name %></h4>
                        <p><%= tweet.content %></p>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No tweets found in the database.</p>
        <% } %>
    </div>
    
    <footer class="footer">
        <p>Developed by Anant Shree using EJS, NodeJS, MongoDB</p>
    </footer>
</body>
</html>